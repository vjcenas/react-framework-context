{
  "name": "react-framework-context",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=12.14.1"
  },
  "scripts": {
    "ts:scss": "tsm src/**/*.module.scss -s -c -p",
    "start": "concurrently \"npm:ts:scss -- -w\" \"react-scripts start\"",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:push": "cross-env CI=true react-scripts test --env=jsdom",
    "test:coverage": "npm test -- --coverage --watchAll=false",
    "test:pipeline": "react-scripts test --env=jsdom --ci --reporters=default --reporters=jest-junit --coverage --coverageReporters=cobertura --watchAll=false",
    "lint": "yarn run lint:ts",
    "lint:ts": "tsc && yarn lint:eslint",
    "lint:eslint": "eslint --ext=ts,tsx \"src/**/*.{ts,tsx}\"",
    "lint:css": "stylelint --syntax scss \"src/**/*.scss\"",
    "lint:staged": "lint-staged --verbose",
    "storybook": "start-storybook -p 4000 -s public",
    "storybook:build": "build-storybook -s public -o build/storybook"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "axios": "^0.21.1",
    "classnames": "^2.2.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-localization": "^1.0.15",
    "react-router-dom": "^5.2.0",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.0.19",
    "@storybook/addon-links": "^6.0.19",
    "@storybook/addon-viewport": "^6.0.19",
    "@storybook/addons": "^6.0.19",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.19",
    "@types/axios": "^0.14.0",
    "@types/classnames": "^2.2.11",
    "@types/enzyme": "^3.10.5",
    "@types/faker": "^4.1.12",
    "@types/node": "^12.0.0",
    "@types/node-sass": "^4.11.1",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "eslint": "^7.12.0",
    "eslint-config-airbnb-typescript": "^11.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "faker": "^5.1.0",
    "husky": "^4.2.5",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.5.3",
    "node-sass": "^4.14.1",
    "prettier": "^2.2.1",
    "react-scripts": "^4.0.0",
    "stylelint": "^13.6.1",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-standard": "^20.0.0",
    "ts-jest": "^26.3.0",
    "typed-scss-modules": "^2.0.1",
    "typescript": "~4.0.5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.story.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/app.tsx",
      "!src/index.tsx",
      "!src/serviceWorker.ts",
      "!src/hooks/reducer-logger.hook.ts"
    ],
    "coveragePathIgnorePatterns": [
      "./src/*/*.types.{ts,tsx}",
      "./src/app.tsx",
      "./src/index.tsx",
      "./src/serviceWorker.ts"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "clover",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 90,
        "branches": 90,
        "lines": 90,
        "functions": 90
      }
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,scss,md}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx}": [
      "npm run lint"
    ],
    "src/**/*.{scss}": [
      "npm run lint:scss"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --verbose",
      "pre-push": "npm run test:push"
    }
  }
}
